<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
          http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
          http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>${env}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/server/jetty</directory>
            <directoryMode>0777</directoryMode>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>/logs/*.log</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.outputDirectory}/start.ini</source>
            <outputDirectory>./</outputDirectory>
            <destName>start.ini</destName>
        </file>
    </files>
    <!-- 将生成的war解压到jetty的ROOT目录 -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/webapps/ROOT</outputDirectory>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>${project.groupId}:${project.artifactId}:*:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>